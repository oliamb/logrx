{
  "name": "logrx",
  "version": "0.0.1",
  "author": "Olivier Amblet",
  "description": "Small, configurable logging library on top of rxjs",
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "repository": "https://github.com/oliamb/logrx",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "lint": "tslint .",
    "format": "$(npm bin)/prettier",
    "format-check":
      "$(npm bin)/prettier --print-width=100 --single-quote=true --tab-width=2 --trailing-comma=all -l **/*.ts",
    "ci": "npm run lint && npm run format-check && npm test"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": ["**/src/*.spec.ts"]
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "jest": "*",
    "prettier": "^1.8.2",
    "tslint": "^5.8.0"
  },
  "dependencies": {
    "rxjs": "^5.5.2",
    "typescript": "*"
  }
}
