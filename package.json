{
  "name": "logrx",
  "version": "1.1.2",
  "author": "Olivier Amblet",
  "description": "Small, configurable logging library on top of rxjs",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": "https://github.com/oliamb/logrx",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib",
    "compile": "tsc -p ./tsconfig.json",
    "test": "jest",
    "lint": "tslint .",
    "format": "$(npm bin)/prettier --print-width=100 --single-quote=true --tab-width=2 --trailing-comma=all -w src/**/*.ts",
    "format-check": "$(npm bin)/prettier --print-width=100 --single-quote=true --tab-width=2 --trailing-comma=all -l src/**/*.ts",
    "ci": "npm run lint && npm run format-check && npm test && npm run compile",
    "prepublish": "npm run clean && npm run compile && npm run lint && npm run format-check && npm run test",
    "release": "standard-version"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/src/*.spec.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "jest": "*",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "standard-version": "^4.2.0",
    "tslint": "^5.8.0"
  },
  "dependencies": {
    "rxjs": "^5.5.2",
    "typescript": "*"
  }
}
