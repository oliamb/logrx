{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/", "src/*.spec.ts"]
}
