{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/", "src/*.spec.ts"]
}
